# --- Test Wall (Obstacle) ---
# Add a box in front for the robot to crash into and test Bumper
DEF OBSTACLE Solid {
  translation 0 1.5 0.15
  children [
    Shape {
      appearance PBRAppearance {
        baseColor 1 0.6 0 # Orange color
        roughness 1
        metalness 0
      }
      geometry Box {
        size 1.0 0.2 0.3
      }
    }
  ]
  name "obstacle_box"
  boundingObject Box {
    size 1.0 0.2 0.3
  }
}

# --- Level 2.1: Robot with Bumper ---
DEF EncoderBot Robot {
  translation 0 -2.7 0.1
  # Rotate 90 degrees around Z-axis (0 0 1) to make it face Y-axis direction
  rotation 0 0 1 1.5708 
  children [
    # 1. Body
    Shape {
      appearance PBRAppearance {
        baseColor 0.1 0.5 1  # Light blue color
        roughness 1
        metalness 0
      }
      geometry DEF BODY_BOX Box {
        size 0.4 0.2 0.1
      }
    }
    # 2. Left Wheel with Encoder
    HingeJoint {
      jointParameters HingeJointParameters {
        axis 0 1 0
        anchor 0 0.12 0
      }
      device [
        RotationalMotor {
          name "left_motor"  # Motor name for ROS
        }
        PositionSensor {
          name "left_wheel_sensor"  # Encoder for odometry
        }
      ]
      endPoint Solid {
        translation 0 0.12 0
        rotation 1 0 0 1.5708
        name "left_wheel"  # Unique name to avoid conflicts
        children [
          DEF WHEEL Shape {
            appearance PBRAppearance {
              baseColor 0.2 0.2 0.2 # Dark gray color
            }
            geometry Cylinder {
              height 0.04
              radius 0.08
            }
          }
        ]
        boundingObject USE WHEEL
        physics Physics {}
      }
    }
    # 3. Right Wheel with Encoder
    HingeJoint {
      jointParameters HingeJointParameters {
        axis 0 1 0
        anchor 0 -0.12 0
      }
      device [
        RotationalMotor {
          name "right_motor" # Motor name for ROS
        }
        PositionSensor {
          name "right_wheel_sensor"  # Encoder for odometry
        }
      ]
      endPoint Solid {
        translation 0 -0.12 0
        rotation 1 0 0 1.5708
        name "right_wheel" # Unique name to avoid conflicts
        children [
          USE WHEEL
        ]
        boundingObject USE WHEEL
        physics Physics {}
      }
    }
    # 4. Ball Wheels - For stability and balance (Front and Rear)
    BallJoint {
      jointParameters BallJointParameters { anchor -0.15 0 -0.04 }
      endPoint Solid {
        translation -0.15 0 -0.04
        name "ball_wheel_rear"
        children [
          Shape {
            appearance PBRAppearance { baseColor 0.5 0.5 0.5 roughness 0.3 metalness 0.1 }
            geometry Sphere { radius 0.04 }
          }
        ]
        boundingObject Sphere { radius 0.04 }
        physics Physics { density -1 mass 0.1 }
      }
    }
    BallJoint {
      jointParameters BallJointParameters { anchor 0.15 0 -0.04 }
      endPoint Solid {
        translation 0.15 0 -0.04
        name "ball_wheel_front"
        children [
          Shape {
            appearance PBRAppearance { baseColor 0.5 0.5 0.5 roughness 0.3 metalness 0.1 }
            geometry Sphere { radius 0.04 }ÃŸ
          }
        ]
      boundingObject Sphere { radius 0.04 }
      physics Physics {
         # Low friction for smooth rolling
      }
    }
    }
    # 5. Front Marker/Nose (Updated to be Bumper)
    # We changed from simple nose to TouchSensor
    TouchSensor {
      translation 0.2 0 0 # Mounted at the front
      name "bumper"       # Device name for ROS (webots_ros2_msgs/BoolStamped)
      type "bumper"       # Define as bumper type
      
      children [
        # Shape of the bumper (red bar)
        Shape {
          appearance PBRAppearance {
            baseColor 1 0 0 # Red (Red Bumper)
            roughness 0.5
            metalness 0.5
          }
          geometry Box {
            size 0.05 0.35 0.05 # Width 35cm across robot front
          }
        }
      ]
      # Part used for collision detection (Collision Detection)
      boundingObject Box {
        size 0.05 0.35 0.05
      }
      # Add Physics to make it a solid object (Optional: if you want slight movement)
      physics Physics {
      }
    }
  ]
  
  # Main body physics
  boundingObject USE BODY_BOX
  physics Physics {
    density -1
    mass 5
  }
   
  # ROS connection
  name "EncoderBot"
  controller "<extern>"
}