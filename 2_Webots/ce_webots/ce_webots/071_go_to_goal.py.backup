#!/usr/bin/env python3

"""
Level 7.1: Go to Goal (Navigation)
==================================
Basic Navigation: Command the robot to move to specific (X, Y) coordinates.

Logic:
1. Odometry: Calculate position (X, Y, Theta) from wheels and IMU.
2. Calculate Heading: Find required angle using atan2(dy, dx).
3. Turn: Rotate to face the target.
4. Move: Drive forward until distance < 0.1m.

Author: AI Assistant
"""

import rclpy
from rclpy.node import Node
from controller import Robot
import math
import sys

class GoToGoal(Node):
    def __init__(self):
        super().__init__('go_to_goal')
        
        # Initialize Webots
        self.robot = Robot()
        self.timestep = int(self.robot.getBasicTimeStep())
        
        # --- Robot Params (Matches .wbt file) ---
        self.WHEEL_RADIUS = 0.08   # meters (Wheel Radius)
        self.AXLE_LENGTH = 0.24    # meters (Distance between wheels)
        self.MAX_SPEED = 5.0
        
        # --- Hardware Setup ---
        self.left_motor = self.robot.getDevice('left_motor')
        self.right_motor = self.robot.getDevice('right_motor')
        self.left_motor.setPosition(float('inf'))
        self.right_motor.setPosition(float('inf'))
        self.left_motor.setVelocity(0.0)
        self.right_motor.setVelocity(0.0)
        
        self.left_encoder = self.robot.getDevice('left_encoder')
        self.right_encoder = self.robot.getDevice('right_encoder')
        self.left_encoder.enable(self.timestep)
        self.right_encoder.enable(self.timestep)
        
        self.imu = self.robot.getDevice('imu')
        self.imu.enable(self.timestep)
        
        # --- Navigation State ---
        # Start at (0,0) facing North (PI/2 = 90 degrees) matching the World file
        self.pose = {'x': 0.0, 'y': 0.0, 'theta': 1.5708} 
        self.last_enc_l = 0.0
        self.last_enc_r = 0.0
        
        # Waypoints list
        self.goals = [
            {'x': 2.0, 'y': 0.8, 'name': 'Point A (Red)'},
            {'x': 0.0, 'y': -2.2, 'name': 'Point B (Green)'},
            {'x': -2.2, 'y': -0.5, 'name': 'Point C (Blue)'},
            {'x': -1.2, 'y': 1.8, 'name': 'Point D (Yellow)'},
            {'x': 0.0, 'y': 0.0, 'name': 'Home'}
        ]
        self.current_goal_idx = 0
        self.state = "TURN" # States: TURN, MOVE, REACHED
        self.wait_counter = 0
        
        self.run()

    def update_odometry(self):
        """Calculate current position from Encoders and IMU"""
        curr_l = self.left_encoder.getValue()
        curr_r = self.right_encoder.getValue()
        
        # Calculate Delta Distance
        dl = (curr_l - self.last_enc_l) * self.WHEEL_RADIUS
        dr = (curr_r - self.last_enc_r) * self.WHEEL_RADIUS
        self.last_enc_l = curr_l
        self.last_enc_r = curr_r
        
        # Average distance traveled
        dist = (dl + dr) / 2.0
        
        # Use IMU for accurate Heading
        rpy = self.imu.getRollPitchYaw()
        if rpy and not math.isnan(rpy[2]):
            self.pose['theta'] = rpy[2] # Use Yaw from IMU directly
            
        # Update X, Y coordinates
        self.pose['x'] += dist * math.cos(self.pose['theta'])
        self.pose['y'] += dist * math.sin(self.pose['theta'])

    def normalize_angle(self, angle):
        """Normalize angle to be within -PI to PI"""
        while angle > math.pi: angle -= 2.0 * math.pi
        while angle < -math.pi: angle += 2.0 * math.pi
        return angle

    def navigate_to_goal(self):
        """Logic to drive towards the target"""
        goal = self.goals[self.current_goal_idx]
        
        # Calculate vector to goal
        dx = goal['x'] - self.pose['x']
        dy = goal['y'] - self.pose['y']
        
        distance = math.sqrt(dx**2 + dy**2)
        target_angle = math.atan2(dy, dx)
        
        # Calculate angle difference
        angle_diff = self.normalize_angle(target_angle - self.pose['theta'])
        
        left_speed = 0.0
        right_speed = 0.0
        status = "Thinking..."
        
        # --- State Machine ---
        if self.state == "REACHED":
            status = "‚úÖ ARRIVED! Waiting..."
            self.wait_counter += 1
            if self.wait_counter > 50: # Wait for approx 1.5 seconds (50 steps)
                self.current_goal_idx = (self.current_goal_idx + 1) % len(self.goals)
                self.state = "TURN" # Next goal
                self.wait_counter = 0

        elif distance < 0.1: # Threshold: 10cm considered reached
            self.state = "REACHED"
            left_speed = 0.0
            right_speed = 0.0
            
        elif self.state == "TURN":
            # If angle is large (> 0.1 rad or ~5.7 deg), spin in place
            if abs(angle_diff) > 0.1: 
                status = f"üîÑ Turning ({math.degrees(angle_diff):.1f}¬∞)"
                turn_speed = 2.0
                if angle_diff > 0: # Target Left -> Spin Left
                    left_speed = -turn_speed
                    right_speed = turn_speed
                else: # Target Right -> Spin Right
                    left_speed = turn_speed
                    right_speed = -turn_speed
            else:
                self.state = "MOVE" # Facing target, start moving
                
        elif self.state == "MOVE":
            # If heading deviates too much (> 0.5 rad), readjust
            if abs(angle_diff) > 0.5: 
                self.state = "TURN"
            else:
                status = f"‚¨ÜÔ∏è  Moving ({distance:.2f}m)"
                # P-Controller for speed (slow down near target)
                forward_speed = min(self.MAX_SPEED, distance * 2.0) 
                forward_speed = max(forward_speed, 1.0) # Don't be too slow
                
                # Heading Correction while moving
                correction = angle_diff * 2.0 
                
                left_speed = forward_speed - correction
                right_speed = forward_speed + correction

        return left_speed, right_speed, status, goal['name']

    def print_dashboard(self, status, goal_name):
        sys.stdout.write("\033[H\033[J") # Clear screen
        print("="*50)
        print(f"   üéØ GO TO GOAL NAVIGATION (v7.1)")
        print("="*50)
        print(f" Current Pos: X={self.pose['x']:.2f} Y={self.pose['y']:.2f}")
        print(f" Heading:     {math.degrees(self.pose['theta']):.1f}¬∞")
        print("-" * 50)
        print(f" TARGET:      {goal_name} ({self.goals[self.current_goal_idx]['x']}, {self.goals[self.current_goal_idx]['y']})")
        print(f" STATUS:      {status}")
        print("="*50)
        sys.stdout.flush()

    def run(self):
        while self.robot.step(self.timestep) != -1:
            self.update_odometry()
            
            l, r, status, g_name = self.navigate_to_goal()
            
            self.left_motor.setVelocity(l)
            self.right_motor.setVelocity(r)
            
            self.print_dashboard(status, g_name)
            
            # rclpy.spin_once(self, timeout_sec=0)

def main(args=None):
    rclpy.init(args=args)
    controller = GoToGoal()
    controller.destroy_node()
    rclpy.shutdown()

if __name__ == '__main__':
    main()